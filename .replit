modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["web_scraper==1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "telegram_bot_setup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "telegram_bot"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add python-telegram-bot requests beautifulsoup4"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "telegram_bot_setup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add python-telegram-bot requests beautifulsoup4 && python main.py"

[[workflows.workflow]]
name = "telegram_bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "TELEGRAM_BOT_TOKEN=\"8040929059:AAHiWHMD8hn-fzAwdeokfafxVPueOzXOyq0\" python main.py"

[workflows.workflow.metadata]
outputType = "console"
